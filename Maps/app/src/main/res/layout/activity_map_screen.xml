<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MapScreen">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#55555555"
            android:hint="  Enter address here..."
            android:textStyle="bold" />

        <Space
            android:layout_width="5dp"
            android:layout_height="fill_parent" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Search" />
    </LinearLayout>

    <Space
        android:id="@+id/Space3"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/linearLayout" />

    <View
        android:id="@+id/Horibar1"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignBottom="@+id/Space3"
        android:background="#333333" />

    <Space
        android:id="@+id/Space4"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/Horibar1" />

    <LinearLayout
        android:id="@+id/lUE"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Space4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tvUE"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Space4"
            android:text="Upcoming Events..."
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Space
            android:id="@+id/Space5"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/tvUE" />

        <View
            android:id="@+id/Horibar2"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_alignBottom="@+id/Space5"
            android:background="#666666" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Horibar2"
            android:choiceMode="singleChoice" />
    </LinearLayout>

    <Space
        android:id="@+id/Space6"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/lUE" />

    <View
        android:id="@+id/Horibar3"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignBottom="@+id/Space6"
        android:background="#333333" />

    <Space
        android:id="@+id/Space7"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/Horibar3" />

    <LinearLayout
        android:id="@+id/lNE"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Space7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tvNE"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Space7"
            android:text="Nearby Events..."
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Space
            android:id="@+id/Space8"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/tvNE" />

        <View
            android:id="@+id/Horibar4"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_alignBottom="@+id/Space7"
            android:background="#666666" />

        <ListView
            android:id="@+id/list2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Horibar4"
            android:choiceMode="singleChoice" />
    </LinearLayout>

</RelativeLayout>
